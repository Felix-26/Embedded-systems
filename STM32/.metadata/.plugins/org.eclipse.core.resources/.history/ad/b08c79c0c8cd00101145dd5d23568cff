#include <stdint.h>
#include <stdio.h>
#include "stm32f446xx.h"

// ADC_CR2
#define ADON 0
#define CONT 1
#define DMA 8
#define DDS 9
#define SWSTART 30
// ADC_SR
#define EOC 1
// RCC_APB2
#define ADC1EN 8

float get_temp(uint16_t dr)
{
	float v = (dr*3.3) / 4095.0;
	float temp = v * 100.0;
	return temp;
}

int main(void)
{
	GPIOA_CLK_EN();
	GPIOA->MODER = (0X3<<0);
//	RCC->APB2ENR |= (1<<ADC1EN);
	ADC1->CR2 |= (1<<ADON);
	ADC1->SQR3 = 0;
	ADC1->SQR1 = 0;
	ADC1->SMPR2 |= (0X7<<0);
	ADC1->CR2 |= (1<<CONT);
	ADC1->CR2 |= (1<<SWSTART);
    /* Loop forever */
	for(;;)
	{
		while(!(ADC1->SR & (1<<EOC)));
		uint16_t temp = (ADC1->DR);
		printf("T : %d\n",temp);
		for(int i=0;i<600000;i++);
	}
}
